<UserControl
    x:Class="Caliburn.Micro.HelloScreens.Orders.OrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <DockPanel Margin="12">
            <StackPanel
                HorizontalAlignment="Right"
                DockPanel.Dock="Bottom"
                Orientation="Horizontal">
                <Button x:Name="Save"
                    Content="Save" />
                <Button x:Name="TryClose"
                    Content="Close" />
            </StackPanel>

            <TextBlock
                FontSize="20"
                Foreground="White"
                Text="This is where the order details would go..." />
        </DockPanel>

        <ContentControl x:Name="Dialogs"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch" />
    </Grid>
</UserControl>